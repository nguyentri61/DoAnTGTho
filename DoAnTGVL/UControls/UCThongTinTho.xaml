<UserControl x:Class="DoAnTGVL.UControls.UCThongTinTho"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAnTGVL.UControls"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="700" d:DesignWidth="1300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Button FontSize="25" Content="Thông tin cá nhân" HorizontalAlignment="Left"
        Width="auto" Height="50" Margin="30 0 0 0"
        Style="{DynamicResource MaterialDesignToolButton}">
            </Button>
        </Grid>

        <Grid Grid.Row="1">
            <WrapPanel x:Name="WpanelCV" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</UserControl>
